# Lightweight Node image for API
FROM node:20-alpine

WORKDIR /app

# Install only production dependencies
COPY package.json ./
COPY yarn.lock* package-lock.json* ./
RUN if [ -f yarn.lock ]; then yarn install --production --frozen-lockfile; else npm ci --omit=dev; fi

# Copy server and public assets (data.json lives here)
COPY server.js ./
COPY public ./public

EXPOSE 3001

CMD ["node", "server.js"]
